# Database Configuration
# Choose one of the following database providers:

# For local PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/peerconnect"

# For production, use one of these cloud providers:

# === RECOMMENDED: Google Cloud SQL PostgreSQL ===
# Setup commands:
# 1. gcloud sql instances create peerconnect-db --database-version=POSTGRES_15 --tier=db-f1-micro --region=us-central1 --authorized-networks=0.0.0.0/0
# 2. gcloud sql databases create peerconnect --instance=peerconnect-db  
# 3. gcloud sql users create peerconnect-user --instance=peerconnect-db --password=your-password
# 4. gcloud sql instances describe peerconnect-db --format="value(ipAddresses[0].ipAddress)"

# ⚠️ UPDATE: Replace with your actual Google Cloud SQL details
# DATABASE_URL="postgresql://peerconnect-user:password@35.123.456.789:5432/peerconnect"

# === Alternative: AWS RDS PostgreSQL ===
# ⚠️ UPDATE: Replace with your actual RDS endpoint
# DATABASE_URL="postgresql://postgres:password@peerconnect-db.abc123.us-east-1.rds.amazonaws.com:5432/postgres"

# === Google Cloud Configuration (optional) ===
# GOOGLE_CLOUD_PROJECT_ID="peerconnect-project"

# Google Cloud (for Firestore)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"

# AWS (for DynamoDB)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Services (optional for Phase 1)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Logging
LOG_LEVEL="info"

# AI/ML Service (for future use)
AI_SERVICE_URL="http://localhost:8000"
AI_SERVICE_API_KEY="your-ai-service-api-key"

